{
  "name": "kidqueue",
  "version": "1.0.0",
  "description": "Kid queue management system for school pickup",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install && npm run install:web && npm run install:mobile && npm run install:api",
    "install:web": "cd packages/web && npm install",
    "install:mobile": "cd packages/mobile && npm install",
    "install:api": "cd packages/api && npm install",
    "dev": "node scripts/dev-start.js",
    "dev:web": "cd packages/web && npm run dev",
    "dev:api": "cd packages/api && npm run dev",
    "setup": "node scripts/setup-database.js",
    "build:web": "cd packages/web && npm run build",
    "build:api": "cd packages/api && npm run build",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd packages/web && npm run test",
    "test:api": "cd packages/api && npm run test",
    "lint": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx",
    "typecheck": "npm run typecheck:web && npm run typecheck:api",
    "typecheck:web": "cd packages/web && npm run typecheck",
    "typecheck:api": "cd packages/api && npm run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}